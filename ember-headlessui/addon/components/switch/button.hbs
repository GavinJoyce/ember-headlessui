{{#let (element (or @tagName 'button')) as |Tag|}}
  <Tag
    id={{@guid}}
    role='switch'
    tabindex='0'
    type='button'
    aria-checked='{{@isOn}}'
    aria-labelledby={{@labelGuid}}
    ...attributes
    data-test-headlessui-switch-button
    {{on 'click' @onClick}}
    {{on 'keyup' @onKeyUp}}
  >
    {{yield}}
  </Tag>
{{/let}}