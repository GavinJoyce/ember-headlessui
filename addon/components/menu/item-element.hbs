{{#let
  (if (tag-name-is-component @tagName) @tagName (element (or @tagName 'a')))
  as |Tag|
}}
  <Tag
    id={{@guid}}
    role='menuitem'
    tabindex='-1'
    disabled={{@isDisabled}}
    data-disabled={{@isDisabled}}
    ...attributes
    {{@registerItemElement}}
    {{on 'mouseover' @onMouseOver}}
    {{on 'click' @onClick}}
  >
    {{yield}}
  </Tag>
{{/let}}