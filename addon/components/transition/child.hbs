<Transition
  @appear={{@appear}}
  @show={{@show}}
  @unmount={{@unmount}}
  @tagName={{@tagName}}
  @enter={{@enter}}
  @enterFrom={{@enterFrom}}
  @enterTo={{@enterTo}}
  @leave={{@leave}}
  @leaveFrom={{@leaveFrom}}
  @leaveTo={{@leaveTo}}
  @beforeEnter={{@beforeEnter}}
  @afterEnter={{@afterEnter}}
  @beforeLeave={{@beforeLeave}}
  @afterLeave={{@afterLeave}}
  {{this.track}}
  ...attributes
>
  {{yield}}
</Transition>